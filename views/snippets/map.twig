    <path class="nonehea" id="sm" d="m 4808.4342,6471.5 c 2.8663,-4.2995 2.8663,-10.0322 7.1658,-12.8986 11.4654,-11.4653 8.599,32.9628 -7.1658,12.8986 z" />
    <path class="nonehea" id="mc" d="m 4071.787,6524.5271 c 11.4654,0 21.4976,-10.0322 21.4976,-20.0644 0,-10.0322 -10.0322,-18.6312 -21.4976,-18.6312 -11.4653,0 -21.4974,8.599 -21.4974,18.6312 0,10.0322 10.0321,20.0644 21.4974,20.0644 11.4654,0 -11.4653,0 0,0 z" />

</svg>
