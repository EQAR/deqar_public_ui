<!doctype html>
<html {{ site.language_attributes }}>
<head>
    <title>
        {% if page_title %}
            {{ page_title }}
        {% else %}
            {{ wp_title }}
        {% endif %}
    </title>

    <meta charset="{{ bloginfo('charset') }}" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="rokit-id" content="{{ post.id }}">

    <link href="{{ bloginfo('pingback_url') }}" rel="pingback">
    <link href="{{ theme.link }}/public/css/eqar.css" rel="stylesheet">

{{ function('wp_head') }}
</head>
