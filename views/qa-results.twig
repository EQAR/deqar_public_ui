{% extends 'base.twig' %}

{% block content %}
	<main class="u-padding">
		<div class="l-two-column u-container">
			<div class="l-two-column__sidebar">
				{% include 'snippets/sidebar.twig' %}
			</div>

            <!-- {{ dump( countries ) }}
            {{ dump( institutions ) }}
            {{ dump( institutionsByCountry ) }} -->

			<div class="l-two-column__content">
				{% include 'views/snippets/breadcrumbs.twig' %}
                {% include 'views/snippets/search.twig' %}

                <ul class="country-list">
                    {% for key,country in institutionsByCountry %}

                        <li class="country-list__item">
                            <a href="#" class="country-list__link">
                                {{ key }} <span class="country-list__count">{{ country|length }}</span>
                            </a>
                        </li>

                    {% endfor %}
                </ul>
            </div>
		</div>
	</main>
{% endblock %}
