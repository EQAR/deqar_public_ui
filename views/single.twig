{% extends 'base.twig' %}

{% block content %}
    <main class="u-padding">
		<div class="l-single-column">
			{% include 'views/snippets/breadcrumbs.twig' %}

            <header class="article-header">
                {% if post.thumbnail %}
                    <img src="{{ TimberImage(post.thumbnail) }}" alt="{{ TimberImage(post.thumbnail).alt }}" class="article-header__thumbnail">
                {% endif %}

                <h1 class="title article-header__title">{{ post.title }}</h1>

                <ul class="post-meta article-header__post-meta">
                    <li class="post-meta__item">
                        <span class="post-meta__category">{{ post.category }}</span>
                    </li>
                    <li class="post-meta__item">
                        <span class="post-meta__date">{{ post.date }}</span>
                    </li>
                </ul>
            </header>

            {% for block in post.get_field('blocks') %}
                {% include 'views/content/' ~ block.acf_fc_layout ~ '.twig' %}
            {% endfor %}

            <div class="share">
                <span class="share__label">Share:</span>
                <ul class="share__list">
                    <li class="share__item">
                        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ post.link }}&title={{ post.title }}&source={{ bloginfo('name') }}" target="_blank" class="share__link js-share__link">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" viewBox="0 0 20 20" class="share__icon">
                                <path d="M20,12.26V20H15.71V12.78c0-1.81-.62-3.05-2.17-3.05a2.36,2.36,0,0,0-2.2,1.64,3.2,3.2,0,0,0-.14,1.09V20H6.91S7,7.77,6.91,6.51H11.2V8.42l0,0h0v0a4.23,4.23,0,0,1,3.86-2.23C17.89,6.19,20,8.12,20,12.26ZM2.43,0A2.28,2.28,0,0,0,0,2.33,2.27,2.27,0,0,0,2.37,4.66h0A2.28,2.28,0,0,0,4.82,2.33,2.27,2.27,0,0,0,2.43,0ZM.25,20H4.54V6.51H.25Z"/>
                            </svg>
                            LinkedIn
                        </a>
                    </li>
                    <li class="share__item">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ post.link }}" target="_blank" class="share__link js-share__link">
                            <svg xmlns="http://www.w3.org/2000/svg" width="9" viewBox="0 0 13 25" class="share__icon">
                                <path d="M8.44,25V13.6h3.83l.57-4.45H8.44V6.31c0-1.29.36-2.16,2.21-2.16H13v-4A32,32,0,0,0,9.57,0C6.17,0,3.84,2.07,3.84,5.87V9.15H0V13.6H3.84V25Z"/>
                            </svg>
                            Facebook
                        </a>
                    </li>
                    <li class="share__item">
                        <a href="https://twitter.com/intent/tweet/?text={{ post.title }}&url={{ post.link }}&via={{ social.twitter }}" target="_blank" class="share__link js-share__link">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" viewBox="0 0 22 18" class="share__icon">
                                <path d="M19.41,2.85a4.55,4.55,0,0,0,2-2.51,9,9,0,0,1-2.87,1.1,4.51,4.51,0,0,0-7.81,3.11,4.59,4.59,0,0,0,.12,1A12.79,12.79,0,0,1,1.53.83,4.57,4.57,0,0,0,2.93,6.9a4.47,4.47,0,0,1-2-.57v.06A4.54,4.54,0,0,0,4.5,10.84a4.49,4.49,0,0,1-2,.08,4.52,4.52,0,0,0,4.22,3.16A9,9,0,0,1,1.08,16,9.12,9.12,0,0,1,0,16a12.71,12.71,0,0,0,6.92,2A12.8,12.8,0,0,0,19.76,5.07q0-.3,0-.59A9.21,9.21,0,0,0,22,2.13,9,9,0,0,1,19.41,2.85Z"/>
                            </svg>
                            Twitter
                        </a>
                    </li>
                </ul>      
            </div>
		</div>
	</main>
{% endblock %}
