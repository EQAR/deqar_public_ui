<div class="member u-margin">
    <div class="member__container">
        <img src="{{ TimberImage(block.photo)|resize(160, 160) }}" alt="{{ TimberImage(block.photo).alt }}" class="member__photo">

        <h3 class="subtitle member__name">{{ block.name }}</h3>
        <div class="text">{{ block.preview|wpautop }}</div>

        {% if block.read_more %}
            <button class="button member__read-more js-member__read-more">
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" width="10" viewBox="0 0 12 7" class="member__arrow">
                    <polygon points="10.79 0 12 1.18 6 7 6 7 6 7 0 1.18 1.22 0 6 4.64 10.79 0"/>
                </svg>
            </button>

            <div class="text member__expandable js-member__expandable">{{ block.read_more }}</div>
        {% endif %}
    </div>
</div>